{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": [
    "app.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "server/**/*.ts",
    "types/**/*.d.ts"
  ]
}
